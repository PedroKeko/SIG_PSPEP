@model SIG_PSPEP.Models.RedefinirSenhaViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Recuperar Senha - SIG-PSPEP</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/favicon.png" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            width: 100%;
            height: 100vh;
            margin: 0;
            font-family: 'Inter', Arial, sans-serif;
            background: linear-gradient(to bottom, #180d5e, #ff0000);
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        /* Fundo estrelado */
        .stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            pointer-events: none;
            z-index: -1;
        }

            .stars span {
                position: absolute;
                color: rgb(95, 249, 0);
                opacity: 0.4;
                animation: twinkle 2s infinite alternate ease-in-out;
            }

        @@keyframes twinkle {
            0%

        {
            opacity: 0.2;
        }

        100% {
            opacity: 0.6;
        }

        }

        /* Card container */
        .card {
            border-radius: 10px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            max-width: 400px;
            width: 100%;
            background: #fff;
        }

        .card-header {
            background-color: transparent;
            border-bottom: none;
            text-align: center;
            color: #4b2c91;
            font-weight: 600;
            font-size: 18px;
            padding: 1.5rem 1rem 1rem;
        }

        .card-body {
            padding: 1.5rem 1.25rem;
        }

        .form-label {
            font-weight: 500;
            color: #4b2c91;
            font-size: 14px;
        }

        .form-control:focus {
            border-color: #764ba2;
            box-shadow: 0 0 8px rgba(118, 75, 162, 0.6);
        }

        .btn-primary {
            background-color: #764ba2;
            border-color: #764ba2;
            font-weight: 600;
            padding: 12px;
            border-radius: 0.75rem;
            transition: background-color 0.3s ease;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #5a3677;
                border-color: #5a3677;
            }

        .input-group-text {
            background-color: #764ba2;
            color: #fff;
            border-radius: 0.75rem 0 0 0.75rem;
            border: none;
            width: 45px;
            justify-content: center;
        }

        /* Validação de erros */
        .text-validation-error {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>
    <div class="stars"></div>

    <div class="card shadow">
        <div class="card-header">
            Contactar Administrador
        </div>
        <div class="card-body">
            <form asp-action="RecuperarSenha" method="post" id="contactForm" novalidate>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text" id="email-addon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v.217l-8 4.8-8-4.8V4z" />
                                <path d="M0 6.383V12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6.383l-7.555 4.53a.5.5 0 0 1-.445 0L0 6.383z" />
                            </svg>
                        </span>
                        <input type="email"
                               id="email"
                               asp-for="Email"
                               class="form-control"
                               placeholder="Seu email"
                               aria-describedby="email-addon"
                               required />
                    </div>
                    <span asp-validation-for="Email" class="text-validation-error"></span>
                </div>

                <button type="submit" class="btn btn-primary">Enviar Email</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle (com Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="~/dist/js/sweetalert2@11.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        criarEstrelas(50);

        const form = document.getElementById("contactForm");
        form.addEventListener("submit", async function (e) {
            e.preventDefault();

            const emailInput = document.getElementById("email");
            const email = emailInput.value.trim();

            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;

            if (!email) {
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'warning',
                    title: 'O campo de e-mail é obrigatório.',
                    showConfirmButton: false,
                    timer: 1500,
                    timerProgressBar: true
                });
                return;
            }

            if (!emailRegex.test(email)) {
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'error',
                    title: 'Por favor, insira um e-mail válido.',
                    showConfirmButton: false,
                    timer: 1500,
                    timerProgressBar: true
                });
                return;
            }

            const formData = new FormData(form);

            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData
                });

                if (response.redirected) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Email enviado!',
                        text: 'Verifique sua caixa de entrada para redefinir sua senha.',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        window.location.href = "/conta/login";
                    });
                } else {
                    const html = await response.text();
                    document.body.innerHTML = html;
                }

            } catch (error) {
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'error',
                    title: 'Algo deu errado ao enviar o formulário.',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true
                });
            }
        });
    });

    function criarEstrelas(qtd) {
        const starContainer = document.querySelector(".stars");
        if (!starContainer) return;

        for (let i = 0; i < qtd; i++) {
            const star = document.createElement("span");
            star.textContent = "★";
            star.style.position = "absolute";
            star.style.left = `${Math.random() * 100}vw`;
            star.style.top = `${Math.random() * 100}vh`;
            star.style.fontSize = `${(Math.random() * 1.5 + 0.5).toFixed(2)}rem`;
            star.style.animationDuration = `${(Math.random() * 2 + 1).toFixed(2)}s`;
            star.classList.add('star');
            starContainer.appendChild(star);
        }
    }
</script>

</body>
</html>
@model SIG_PSPEP.Entidades.EfectivoEfectividade

@{
    ViewData["Title"] = "Lançamento Individual";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="LancamentoIndividual" method="post">
    <div class="mb-3">
        <label class="form-label">Efectivo</label>
        <select asp-for="EfectivoId" class="form-control" asp-items="ViewBag.Efectivos">
            <option value="">-- Selecionar Efectivo --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Data de Presença</label>
        <input asp-for="DataPresenca" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label class="form-label">Tipo de Efetividade</label>
        <select asp-for="EfectividadeTipoId" class="form-control" asp-items="ViewBag.EfectividadeTipos">
            <option value="">-- Selecionar Tipo --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Justificação</label>
        <textarea asp-for="Justificacao" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Lançar</button>
</form>

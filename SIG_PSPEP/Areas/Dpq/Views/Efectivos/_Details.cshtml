@using SIG_PSPEP.Areas.Dpq.Models
@model EfectivoViewModel

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title fw-bold">Detalhes do Efectivo</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
</div>

<div class="modal-body px-4 py-3">
    <!-- Foto e Nome -->
    <div class="text-center mb-4">
        <img id="profileImage"
             src="@(Model.FotoByte != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(Model.FotoByte)}" : Url.Content("~/assets/images/users/user-police.png"))"
             class="rounded-circle shadow border border-3 border-primary"
             style="width: 130px; height: 130px; object-fit: cover;"
             alt="Foto de Perfil" />
        <h5 class="mt-3 text-uppercase fw-semibold">@Model.NomeCompleto</h5>
        <p class="text-muted small">NIP: @Model.NIP | Nº Processo: @Model.Num_Processo</p>
    </div>

    <!-- Informações Pessoais -->
    <section class="mb-4">
        <h6 class="text-primary border-bottom pb-1 d-flex align-items-center">
            <i class="bi bi-person me-2"></i> Informações Pessoais
        </h6>
        <div class="row">
            <div class="col-md-6 mb-2"><strong>Apelido:</strong> @Model.Apelido</div>
            <div class="col-md-6 mb-2"><strong>Género:</strong> @Model.Genero</div>
            <div class="col-md-6 mb-2"><strong>Data de Nascimento:</strong> @Model.DataNasc.ToString("dd/MM/yyyy")</div>
            <div class="col-md-6 mb-2"><strong>Estado Civil:</strong> @Model.EstadoCivil</div>
            <div class="col-md-6 mb-2"><strong>Grupo Sanguíneo:</strong> @Model.GSanguineo</div>
        </div>
    </section>

    <!-- Documentos -->
    <section class="mb-4">
        <h6 class="text-primary border-bottom pb-1 d-flex align-items-center">
            <i class="bi bi-file-earmark-text me-2"></i> Documentos
        </h6>
        <div class="row">
            <div class="col-md-6 mb-2"><strong>Nº BI:</strong> @Model.NumBI</div>
            <div class="col-md-6 mb-2"><strong>BI Emitido em:</strong> @Model.BIEmitido</div>
            <div class="col-md-6 mb-2"><strong>Validade do BI:</strong> @Model.BIValidade.ToString("dd/MM/yyyy")</div>
            <div class="col-md-6 mb-2"><strong>Nº Carta Condução:</strong> @Model.NumCartaConducao</div>
            <div class="col-md-6 mb-2"><strong>Carta Emitida em:</strong> @Model.CartaEmitido</div>
            <div class="col-md-6 mb-2"><strong>Validade da Carta:</strong> @Model.CartaValidade.ToString("dd/MM/yyyy")</div>
        </div>
    </section>

    <!-- Contacto -->
    <section class="mb-4">
        <h6 class="text-primary border-bottom pb-1 d-flex align-items-center">
            <i class="bi bi-telephone me-2"></i> Contacto
        </h6>
        <div class="row">
            <div class="col-md-6 mb-2"><strong>Telefone 1:</strong> @Model.Telefone1</div>
            <div class="col-md-6 mb-2"><strong>Telefone 2:</strong> @Model.Telefone2</div>
            <div class="col-md-6 mb-2"><strong>Email:</strong> @Model.Email</div>
        </div>
    </section>

    <!-- Endereço -->
    <section class="mb-4">
        <h6 class="text-primary border-bottom pb-1 d-flex align-items-center">
            <i class="bi bi-geo-alt me-2"></i> Endereço
        </h6>
        <div class="row">
            <div class="col-md-6 mb-2"><strong>Província de Residência:</strong> @Model.ProvinciaResId</div>
            <div class="col-md-6 mb-2"><strong>Município:</strong> @Model.MunicipioId</div>
            <div class="col-md-6 mb-2"><strong>Bairro:</strong> @Model.Destrito_BairroRes</div>
            <div class="col-md-6 mb-2"><strong>Rua:</strong> @Model.Rua</div>
            <div class="col-md-6 mb-2"><strong>Número da Casa:</strong> @Model.CasaNum</div>
        </div>
    </section>

    <!-- Formação Acadêmica -->
    <section class="mb-4">
        <h6 class="text-primary border-bottom pb-1 d-flex align-items-center">
            <i class="bi bi-mortarboard me-2"></i> Formação Acadêmica
        </h6>
        <div class="row">
            <div class="col-md-6 mb-2"><strong>Habilitação:</strong> @Model.Habilitacao</div>
            <div class="col-md-6 mb-2"><strong>Curso:</strong> @Model.CursoHabilitado</div>
            <div class="col-md-6 mb-2"><strong>Instituição:</strong> @Model.InstitAcademica</div>
        </div>
    </section>

    <!-- Outras Informações -->
    <section class="mb-4">
        <h6 class="text-primary border-bottom pb-1 d-flex align-items-center">
            <i class="bi bi-info-circle me-2"></i> Outras Informações
        </h6>
        <div class="row">
            <div class="col-md-12 mb-2"><strong>Outras Informações:</strong> @Model.OutrasInfo</div>
        </div>
    </section>

    <!-- Rodapé -->
    <div class="modal-footer bg-light">
    </div>
</div>

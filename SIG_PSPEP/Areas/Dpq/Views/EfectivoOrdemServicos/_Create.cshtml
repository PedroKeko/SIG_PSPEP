@model SIG_PSPEP.Entidades.EfectivoOrdemServico
<style>
    .modal-content {
        max-height: 85vh;
        overflow-y: auto;
        border-radius: 10px;
    }

    .modal-header {
        background: rgb(0, 20, 60);
        background: linear-gradient(0deg, rgba(0, 20, 60, 1) 0%, rgba(5, 15, 120, 1) 100%);
        position: sticky;
        color: white;
        padding: 10px 15px;
        border-bottom: 1px solid #dee2e6;
    }

        .modal-header .btn-close {
            filter: invert(1);
            opacity: 1;
        }

    .modal-title {
        font-size: 18px;
    }
</style>

<form asp-action="Create" onsubmit="return submitForm(this)">
    <div class="modal-header">
        <h5 class="modal-title">Promoção indívidual</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
    </div>
    <div class="modal-body">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <div class="form-group">
                    <label asp-for="EfectivoId" class="control-label"></label>
                    <select asp-for="EfectivoId" class="form-control" asp-items="ViewBag.EfectivoId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PatenteId" class="control-label"></label>
                    <select asp-for="PatenteId" class="form-control" asp-items="ViewBag.PatenteId"></select>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NumDespacho" class="control-label"></label>
                            <input asp-for="NumDespacho" class="form-control" />
                            <span asp-validation-for="NumDespacho" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="OrdemServicoId" class="control-label"></label>
                            <select asp-for="OrdemServicoId" class="form-control" asp-items="ViewBag.OrdemServicoId"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="custom2-btn btn-2-success">Salvar</button>
        <button type="button" class="custom2-btn btn-2-dark-blue" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


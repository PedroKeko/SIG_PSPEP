@model SIG_PSPEP.Entidade.Municipio

<form asp-action="Create" onsubmit="return submitForm(this)">
	<div class="modal-header">
		<h5 class="modal-title">Registro de Município</h5>
		<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
	</div>
	<div class="modal-body">
		<div class="row justify-content-center">
			<div class="col-md-9">
				<!-- Limita o conteúdo a 8 colunas de 12 -->
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label class="control-label small-label">Província</label>
					<select asp-for="ProvinciaId" class="form-select form-control-sm input-1 small-input" asp-items="ViewBag.ProvinciaId"></select>
				</div>
				<div class="form-group">
					<label class="control-label small-label">Nome do Município</label>
					<input asp-for="Nome" class="form-control form-control-sm input-1 small-input" placeholder="Nome do Município" required
						   oninvalid="this.setCustomValidity('Por favor, preencha o nome do Município!')" oninput="setCustomValidity('')" />
					<span asp-validation-for="Nome" class="text-danger"></span>
				</div>				
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="submit" class="custom2-btn btn-2-success">Salvar</button>
		<button type="button" class="custom2-btn btn-2-dark-blue" data-bs-dismiss="modal">Cancelar</button>
	</div>
</form>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

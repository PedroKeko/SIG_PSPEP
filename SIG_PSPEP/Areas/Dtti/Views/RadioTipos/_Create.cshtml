@model SIG_PSPEP.Entidades.RadioTipo

<form asp-action="Create" onsubmit="return submitForm(this)">
	<div class="modal-header">
		<h5 class="modal-title">Registro de Modelo de Rádio</h5>
		<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
	</div>
	<div class="modal-body">
		<div class="row justify-content-center">
			<div class="col-md-9">
				<!-- Limita o conteúdo a 8 colunas de 12 -->
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
                    <label class="control-label small-label">Marca de Rádio</label>
                    <input asp-for="Marca" class="form-control form-control-sm input-1 small-input" placeholder="Marca de Rádio" required
                           oninvalid="this.setCustomValidity('Por favor, preencha a Marca de Rádio!')" oninput="setCustomValidity('')" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
				</div>
                <div class="form-group">
                    <label class="control-label small-label">Modelo de Rádio</label>
                    <input asp-for="Modelo" class="form-control form-control-sm input-1 small-input" placeholder="Modelo de Rádio" required
                           oninvalid="this.setCustomValidity('Por favor, preencha o Modelo de Rádio!')" oninput="setCustomValidity('')" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="submit" class="custom2-btn btn-2-success">Salvar</button>
		<button type="button" class="custom2-btn btn-2-dark-blue" data-bs-dismiss="modal">Cancelar</button>
	</div>
</form>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
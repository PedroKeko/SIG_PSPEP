@model SIG_PSPEP.Entidades.OrgUnidPnaMinint

<form asp-action="Create" onsubmit="return submitForm(this)">
	<div class="modal-header">
		<h5 class="modal-title">Registar Orgão ou unidade do Minint</h5>
		<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
	</div>
	<div class="modal-body">
		<div class="row justify-content-center">
			<div class="col-md-9">
				<!-- Limita o conteúdo a 8 colunas de 12 -->
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
					<label class="control-label">Orgao/Unidade Principal</label>
					<input asp-for="OrgaoUnidadePrincipal" class="form-control form-control-sm input-1 small-input" placeholder="Comando Geral" />
                    <span asp-validation-for="OrgaoUnidadePrincipal" class="text-danger"></span>
                </div>
                <div class="form-group">
					<label class="control-label">Nome do Orgao/Unidade</label>
					<input asp-for="NomeOrgaoUnidade" class="form-control form-control-sm input-1 small-input" placeholder="Direcção de Telecomunicações e Tecnol..." />
                    <span asp-validation-for="NomeOrgaoUnidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sigla" class="control-label"></label>
					<input asp-for="Sigla" class="form-control form-control-sm input-1 small-input" placeholder="DTTI/CGPN" />
                    <span asp-validation-for="Sigla" class="text-danger"></span>
                </div>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="submit" class="custom2-btn btn-2-success">Salvar</button>
		<button type="button" class="custom2-btn btn-2-dark-blue" data-bs-dismiss="modal">Cancelar</button>
	</div>
</form>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
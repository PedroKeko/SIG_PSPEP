@{
    ViewData["Title"] = "Painel de Contrle DTTI";
    Layout = "~/Areas/Dtti/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<style>
    .card-hover {
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        background-color: #ffffff;
        position: relative;
        overflow: hidden;
        min-height: 100px;
    }

        .card-hover:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            transform: translateY(-3px);
        }

</style>

<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Sales Cards  -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- Efetivo Total -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <div style="background: #00bcd4;" class="box text-center">
                    <h1 class="font-light text-white">
                        <i class="fa fa-users"></i>
                    </h1>
                    <h6 class="text-white">Efetivo Total</h6>
                    <h4 class="text-white">25,320</h4>
                </div>
            </div>
        </div>

        <!-- Oficiais Superiores -->
        <div class="col-md-6 col-lg-4 col-xlg-3">
            <div class="card card-hover">
                <div style="background: #4caf50;" class="box text-center">
                    <h1 class="font-light text-white">
                        <i class="fa fa-star"></i>
                    </h1>
                    <h6 class="text-white">Oficiais Superiores</h6>
                    <h4 class="text-white">1,250</h4>
                </div>
            </div>
        </div>

        <!-- Oficiais Subalternos -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <div style="background: #ff9800;" class="box text-center">
                    <h1 class="font-light text-white">
                        <i class="fa fa-user-secret"></i>
                    </h1>
                    <h6 class="text-white">Subalternos</h6>
                    <h4 class="text-white">3,600</h4>
                </div>
            </div>
        </div>

        <!-- Subchefes -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <div style="background: #f44336;" class="box text-center">
                    <h1 class="font-light text-white">
                        <i class="fa fa-user-shield"></i>
                    </h1>
                    <h6 class="text-white">Subchefes</h6>
                    <h4 class="text-white">20,470</h4>
                </div>
            </div>
        </div>

        <!-- Agentes -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <div style="background: #03a9f4;" class="box text-center">
                    <h1 class="font-light text-white">
                        <i class="fa fa-user"></i>
                    </h1>
                    <h6 class="text-white">Agentes</h6>
                    <h4 class="text-white">5,200</h4>
                </div>
            </div>
        </div>

        <!-- Efetivo Feminino -->
        <div class="col-md-6 col-lg-4 col-xlg-3">
            <div class="card card-hover">
                <div style="background: #e91e63;" class="box text-center">
                    <h1 class="font-light text-white">
                        <i class="fa fa-female"></i>
                    </h1>
                    <h6 class="text-white">Efetivo Feminino</h6>
                    <h4 class="text-white">6,500</h4>
                </div>
            </div>
        </div>

        <!-- Efetivo Masculino -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <div style="background: #2196f3;" class="box text-center">
                    <h1 class="font-light text-white">
                        <i class="fa fa-male"></i>
                    </h1>
                    <h6 class="text-white">Efetivo Masculino</h6>
                    <h4 class="text-white">18,820</h4>
                </div>
            </div>
        </div>

        <!-- Reformados -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <div style="background: #8bc34a;" class="box text-center">
                    <h1 class="font-light text-white">
                        <i class="fa fa-user-plus"></i>
                    </h1>
                    <h6 class="text-white">Reformados</h6>
                    <h4 class="text-white">780</h4>
                </div>
            </div>
        </div>

        <!-- Transferidos -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <div style="background: #673ab7;" class="box text-center">
                    <h1 class="font-light text-white">
                        <i class="fa fa-exchange-alt"></i>
                    </h1>
                    <h6 class="text-white">Transferidos</h6>
                    <h4 class="text-white">1,100</h4>
                </div>
            </div>
        </div>

        <!-- Efetivo em Formação -->
        <div class="col-md-6 col-lg-2 col-xlg-3">
            <div class="card card-hover">
                <div style="background: #ff5722;" class="box text-center">
                    <h1 class="font-light text-white">
                        <i class="fa fa-graduation-cap"></i>
                    </h1>
                    <h6 class="text-white">Em Formação</h6>
                    <h4 class="text-white">2,300</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Sales chart -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-md-flex align-items-center">
                        <div>
                            <h4 class="card-title">Contole de Meios</h4>
                            <h5 class="card-subtitle">Radios e Dispositivos Informáticos</h5>
                        </div>
                    </div>
                    <div class="row">
                        <!-- column -->
                        <div class="col-lg-9">
                            <div class="flot-chart">
                                <div class="flot-chart-content"
                                     id="flot-line-chart"></div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="row">
                                <div class="col-6">
                                    <div class="bg-dark p-10 text-white text-center">
                                        <i class="mdi mdi-account fs-3 mb-1 font-16"></i>
                                        <h5 class="mb-0 mt-1">2540</h5>
                                        <small class="font-light">Total Users</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-dark p-10 text-white text-center">
                                        <i class="mdi mdi-plus fs-3 font-16"></i>
                                        <h5 class="mb-0 mt-1">120</h5>
                                        <small class="font-light">New Users</small>
                                    </div>
                                </div>
                                <div class="col-6 mt-3">
                                    <div class="bg-dark p-10 text-white text-center">
                                        <i class="mdi mdi-cart fs-3 mb-1 font-16"></i>
                                        <h5 class="mb-0 mt-1">656</h5>
                                        <small class="font-light">Total Shop</small>
                                    </div>
                                </div>
                                <div class="col-6 mt-3">
                                    <div class="bg-dark p-10 text-white text-center">
                                        <i class="mdi mdi-tag fs-3 mb-1 font-16"></i>
                                        <h5 class="mb-0 mt-1">9540</h5>
                                        <small class="font-light">Total Orders</small>
                                    </div>
                                </div>
                                <div class="col-6 mt-3">
                                    <div class="bg-dark p-10 text-white text-center">
                                        <i class="mdi mdi-table fs-3 mb-1 font-16"></i>
                                        <h5 class="mb-0 mt-1">100</h5>
                                        <small class="font-light">Pending Orders</small>
                                    </div>
                                </div>
                                <div class="col-6 mt-3">
                                    <div class="bg-dark p-10 text-white text-center">
                                        <i class="mdi mdi-web fs-3 mb-1 font-16"></i>
                                        <h5 class="mb-0 mt-1">8540</h5>
                                        <small class="font-light">Online Orders</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- column -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Sales chart -->
    <!-- ============================================================== -->
</div>

<div class="container-fluid">
    <h2 class="mb-4">Dashboard - Tecnologias e Informática</h2>

    <!-- Resumo Rápido -->
    <div class="row text-white">
        <div class="col-md-3 mb-3">
            <div class="bg-success p-3 rounded text-center">
                <i class="mdi mdi-radio fs-2"></i>
                <h5>Rádios Operacionais</h5>
                <h3>42</h3>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="bg-info p-3 rounded text-center">
                <i class="mdi mdi-laptop fs-2"></i>
                <h5>Computadores Ativos</h5>
                <h3>85</h3>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="bg-warning p-3 rounded text-center">
                <i class="mdi mdi-router-wireless fs-2"></i>
                <h5>Dispositivos de Rede</h5>
                <h3>25</h3>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="bg-danger p-3 rounded text-center">
                <i class="mdi mdi-account-multiple fs-2"></i>
                <h5>Efetivos Técnicos</h5>
                <h3>59</h3>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">Dispositivos por Categoria</div>
                <div class="card-body">
                    <canvas id="grafico-dispositivos" style="height:300px;"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">Efetivos por Especialidade</div>
                <div class="card-body">
                    <canvas id="grafico-efectivos" style="height:300px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Ocorrências Técnicas -->
    <div class="card mt-4">
        <div class="card-header bg-secondary text-white">Últimas Ocorrências Técnicas</div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Data</th>
                        <th>Descrição</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>21/04/2025</td>
                        <td>Substituição de rádio do patrulheiro</td>
                        <td><span class="badge bg-warning">Pendente</span></td>
                    </tr>
                    <tr>
                        <td>20/04/2025</td>
                        <td>Configuração de router na DTSER</td>
                        <td><span class="badge bg-success">Concluído</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('grafico-dispositivos').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Rádios', 'Computadores', 'Switches', 'Servidores'],
                datasets: [{
                    label: 'Total',
                    data: [42, 85, 25, 10],
                    backgroundColor: ['#00c292', '#03a9f3', '#ab8ce4', '#fb9678'],
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    title: {
                        display: true,
                        text: 'Dispositivos por Categoria',
                        color: '#555',
                        font: { size: 18 }
                    }
                }
            }
        });

        const efetivosChart = new Chart(document.getElementById('grafico-efectivos'), {
            type: 'doughnut',
            data: {
                labels: ['Telecomunicações', 'Informática', 'Redes', 'Outros'],
                datasets: [{
                    label: 'Efetivos',
                    data: [12, 24, 18, 5],
                    backgroundColor: ['#36a2eb', '#ff6384', '#ffcd56', '#4bc0c0']
                }]
            },
            options: {
                plugins: {
                    title: {
                        display: true,
                        text: 'Distribuição dos Efetivos por Especialidade'
                    }
                }
            }
        });
    </script>
}

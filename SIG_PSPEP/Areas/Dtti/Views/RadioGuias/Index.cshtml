                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>

            <!-- Corpo -->
            <div class="modal-body p-0" id="modalContentPrint">
                <div class="text-center py-5 text-secondary">Carregando relatório...</div>
            </div>
        </div>
    </div>
</div>

<script>
    // Abre o modal e carrega o relatório FastReport via AJAX
    function openModalPrint(url) {
        $('#modalContentPrint').html('<div class="text-center py-5 text-secondary">Carregando relatório...</div>');

        $.get(url, function (data) {
            $('#modalContentPrint').html(data);
            const modal = new bootstrap.Modal(document.getElementById('modalPrint'));
            modal.show();
        }).fail(function () {
            $('#modalContentPrint').html('<div class="text-danger text-center py-5">Erro ao carregar relatório.</div>');
        });
    }
</script>





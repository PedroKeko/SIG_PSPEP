@model IEnumerable<SIG_PSPEP.Areas.Dtti.Models.RadioGuiaViewModel>

@{
    ViewData["Title"] = "Guias de Movimentações de Rádios";
}

<link href="~/dist/css/mystyle.css" rel="stylesheet" />
<link href="~/dist/css/form-step.css" rel="stylesheet" />
<link href="~/dist/css/botoes.css" rel="stylesheet" />
<link href="~/dist/css/jquery.datatables.min.css" rel="stylesheet" />
<link href="~/dist/css/buttons.datatables.min.css" rel="stylesheet" />
<style>
    .badge {
        font-size: 11px;
        padding: 2px 6px;
        border-radius: 4px;
        font-weight: 500;
        min-width: 70px;
    }

    th {
        text-transform: uppercase;
    }

    .table thead th {
        text-align: center !important;
        vertical-align: middle;
    }

    /* Modal personalizado */
    .custom-modal-width {
        max-width: 95vw; /* ocupa 95% da largura da tela */
        width: 1400px; /* define um limite fixo para telas grandes */
    }

    /* Opcional: para telas pequenas, mantém responsivo */
    @@media (max-width: 1200px) {
        .custom-modal-width

    {
        max-width: 98vw;
        width: auto;
    }

    }

</style>
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
            </div>
            <div class="table-responsive">
                <table id="minhaTabela" class="DataTable table table-striped table-scroll table-bordered table-compact display">
                    <thead class="text-center">
                        <tr class="text-center">
                            <th class="w-5">
                                #
                            </th>
                            <th>Nº Guia</th>
                            <th>QTD</th>
                            <th>Responsavél</th>
                            <th>Estado CH</th>
                            <th>Chefe da Área</th>
                            <th>Data</th>
                            <th class="">Acções</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @{
                            int index = 1;
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@index</td>
                                    <td>@item.NumGuia</td>
                                    <td class="fw-semibold">@item.QuantidadeRadios</td>
                                    <td>@item.NomeUsuario</td>
                                    <td>
                                        @if (item.Aprovado)
                                        {
                                            <span class="badge bg-success">Aprovado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pendente</span>
                                        }
                                    </td>
                                   
                                   
                                    <td>@item.NomeChefe</td>
                                    <td>@item.DataRegisto.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <!-- Editar -->
                                        <a href="javascript:void(0)"
                                           onclick="openModal('@Url.Action("Edit", "RadioGuias", new { area = "Dtti", id = item.Id })')">
                                            <i class="fas fa-pencil-alt fa-lg" style="color: #007BFF;"></i>
                                        </a>

                                        <!-- Detalhes -->
                                        <a href="javascript:void(0)"
                                           onclick="openModal1('@Url.Action("Details", "RadioGuias", new { area = "Dtti", id = item.Id })')">
                                            <i class="fas fa-eye fa-lg" style="color: #28A745;"></i>
                                        </a>

                                        @if (item.Aprovado)
                                        {
                                            <button type="button" class="btn p-0 border-0 bg-transparent" onclick="openModalPrint('/Dtti/Relatorio/VisualizarGuia?id=@item.Id')">
                                                <i class="fas fa-print fa-lg text-secondary"></i>
                                            </button>
                                        }

                                        <!-- Eliminar -->
                                        <a id="openDeleteModal_@item.Id"
                                           href="javascript:void(0)"
                                           onclick="deleteItem(@item.Id)">
                                            <i class="fas fa-trash-alt fa-lg" style="color: #DC3545;"></i>
                                        </a>
                                    </td>

                        </tr>
                           index++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Insersão -->
<div class="modal fade" id="modalForm" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modalContent">
            <!-- Modal Header -->
        </div>
    </div>
</div>

<!-- Modal de Edição -->
<div class="modal fade" id="modalDetalhes" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xxl modal-dialog-centered modal-dialog-scrollable custom-modal-width">
        <div class="modal-content" id="modalContent1">
            <!-- Modal Header -->
        </div>
    </div>
</div>

<!-- Modal de Confirmação de Exclusão -->

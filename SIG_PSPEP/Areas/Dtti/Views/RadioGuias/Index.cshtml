@section Scripts {
    <script>
        function openModal(url) {
            $.get(url, function (data) {
                $('#modalContent').html(data);
                let modal = new bootstrap.Modal(document.getElementById('modalForm'));
                modal.show();
            });
        }

         // Recarrega a página quando o modal for fechado
                const modalElement = document.getElementById('modalForm');
        modalElement.addEventListener('hidden.bs.modal', function () {
            location.reload();
        });

        function submitForm(form) {
            $.post(form.action, $(form).serialize(), function (result) {
                if (result.success) {
                    location.reload();
                } else {
                    $('#modalContent').html(result); // reexibir erros no modal
                }
            });
            return false;
        }

                // Exibir modal de detalhes
        function openModal1(url) {
            $.get(url, function (data) {
                // Caso o controller retorne JSON de erro
                if (typeof data === "object" && data.success === false) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Atenção!',
                        text: data.message,
                        confirmButtonText: 'Entendi',
                        confirmButtonColor: '#ffc107'
                    });
                    return;
                }

                // Caso retorne o HTML parcial
                $('#modalContent1').html(data);
                let modal = new bootstrap.Modal(document.getElementById('modalDetalhes'));
                modal.show();
            }).fail(() => {
                Swal.fire({
                    icon: 'error',
                    title: 'Erro!',
                    text: 'Ocorreu um problema ao carregar os detalhes.',
                    confirmButtonColor: '#d33'
                });
            });
        }

                document.querySelectorAll('.btn-imprimir').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                imprimirGuia(this.dataset.url);
            });
        });

    </script>

    <script>
        function deleteItem(id) {
            Swal.fire({
                title: "Tens a certeza?",
                text: "Esta acção não pode ser desfeita!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Sim",
                cancelButtonText: "Não",
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/Dtti/RadioGuias/Delete/${id}`,
                        type: 'POST',
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: response.message || 'Registo eliminado com sucesso!',
                                    toast: true,
                                    position: 'top-end',
                                    showConfirmButton: false,
                                    timer: 1500,
                                    timerProgressBar: true
                                }).then(() => {
                                    if (response.redirectUrl)
                                        window.location.href = response.redirectUrl;
                                    else
                                        location.reload();
                                });
                            } else {
                                showErrorAlert(response.message || 'Não foi possível eliminar o registo.');
                            }
                        },
                        error: function (xhr) {
                            console.error("Erro ao eliminar:", xhr);
                            showErrorAlert("Ocorreu um erro ao tentar eliminar o registo.");
                        }
                    });
                }
            });
        }

        function showErrorAlert(message) {
            Swal.fire({
                icon: 'warning',
                title: 'Atenção!',
                text: message,
                confirmButtonText: 'Entendi',
                customClass: {
                    confirmButton: 'btn btn-warning'
                },
                buttonsStyling: false
            });
        }
    </script>

    <script>
        function configurarToolbarFastReport() {
            const iframe = document.querySelector('#modalContentPrint iframe');

            if (!iframe) {
                console.warn('iframe do relatório não encontrado.');
                return;
            }

            // Espera o carregamento completo do iframe
            iframe.onload = () => {
                const tentativa = setInterval(() => {
                    const toolbar = iframe.contentDocument?.querySelector('.fr-toolbar');

                    if (toolbar) {
                        clearInterval(tentativa); // Para a verificação após encontrar

                        // Evita adicionar o botão várias vezes
                        if (toolbar.querySelector('.botao-pdf-custom')) return;

                        // Esconde o botão padrão de exportação
                        toolbar.querySelectorAll('button').forEach(btn => {
                            const title = btn.getAttribute('title')?.toLowerCase();
                            if (title?.includes('save') || title?.includes('salvar') || title?.includes('export')) {
                                btn.style.display = 'none';
                            }
                        });

                        // Cria botão personalizado
                        const novoBotao = document.createElement('button');
                        novoBotao.className = 'botao-pdf-custom';
                        novoBotao.title = 'Exportar em PDF';
                        novoBotao.setAttribute('aria-label', 'Exportar em PDF');

                        novoBotao.innerHTML = `
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 16 16" fill="none">
                                <path d="M0.5 10a0.5 0.5 0 0 1 0.5 0.5v3a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-3a0.5 0.5 0 0 1 1 0v3a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-3a0.5 0.5 0 0 1 0.5-0.5z"
                                    stroke="#000" stroke-width="1.3" fill="#000"/>
                                <path d="M7.646 10.854a0.5 0.5 0 0 0 0.708 0l3-3a0.5 0.5 0 0 0-0.708-0.708L8.5 9.293V1.5a0.5 0.5 0 0 0-1 0v7.793L5.354 7.146a0.5 0.5 0 1 0-0.708 0.708l3 3z"
                                    stroke="#000" stroke-width="1.5" fill="#000"/>
                            </svg>
                        `;

                        Object.assign(novoBotao.style, {
                            marginLeft: '10px',
                            padding: '6px 10px',
                            backgroundColor: '#f0f0f0',
                            border: '1px solid #ccc',
                            borderRadius: '4px',
                            cursor: 'pointer',
                            fontSize: '14px',
                            display: 'flex',
                            alignItems: 'center',
                            transition: 'all 0.2s ease-in-out'
                        });

                        novoBotao.onclick = function () {
                            window.open('/Dtti/Relatorio/ExportarPDF', '_blank');
                        };

                        toolbar.appendChild(novoBotao);
                    }
                }, 300); // Verifica a cada 300ms até encontrar a toolbar (ou timeout após alguns segundos)
            };
        }
    </script>

}

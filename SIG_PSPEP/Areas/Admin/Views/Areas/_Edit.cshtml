@model SIG_PSPEP.Entidades.Area

<form asp-action="Edit" onsubmit="return submitForm(this)">
    <div class="modal-header">
        <h5 class="modal-title">Alterar Àrea</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
    </div>
    <div class="modal-body">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <!-- Limita o conteúdo a 8 colunas de 12 -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label small-label">Nome da Área</label>
                    <input type="text" asp-for="NomeArea" class="form-control form-control-sm input-1 small-input" placeholder="Nome da Área" required />
                    <span asp-validation-for="NomeArea" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label small-label">Descrição da Área</label>
                    <input type="text" asp-for="DescricaoArea" class="form-control form-control-sm input-1 small-input" placeholder="Descrição da Área" required />
                    <span asp-validation-for="DescricaoArea" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                    </label>
                </div>
                <input type="hidden" asp-for="Id" />
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="custom2-btn btn-2-success">Salvar</button>
        <button type="button" class="custom2-btn btn-2-dark-blue" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

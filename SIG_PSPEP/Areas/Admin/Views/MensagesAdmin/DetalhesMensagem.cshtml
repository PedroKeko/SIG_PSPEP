@model SIG_PSPEP.Entidades.MensagesAdmin

@{
    ViewData["Title"] = "Detalhes da Mensagem";
}

<style>
    .card-header.bg-primary {
        background-color: #0a2342 !important; /* Azul escuro PNA */
        color: #f5f5f5 !important;
    }

    dt.text-secondary {
        color: #4b5d67 !important; /* Cinza azulado */
    }

    dd.fs-5 {
        color: #212529; /* Texto escuro */
    }

    .badge.bg-success {
        background-color: #145214 !important; /* Verde escuro */
        color: #e0f0d9 !important;
        font-weight: 400;
        font-size: 0.9rem;
        padding: 0.4em 0.8em;
        border-radius: 0.25rem;
    }

    .badge.bg-warning.text-dark {
        background-color: #d9a829 !important; /* Amarelo mostarda */
        color: #3e2e00 !important;
        font-weight: 500;
        font-size: 0.9rem;
        padding: 0.4em 0.8em;
        border-radius: 0.25rem;
    }

</style>

<link href="~/dist/css/mystyle.css" rel="stylesheet" />
<link href="~/dist/css/botoes.css" rel="stylesheet" />
<link href="~/dist/css/jquery.datatables.min.css" rel="stylesheet" />
<link href="~/dist/css/buttons.datatables.min.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="mdi mdi-email-open-outline me-2"></i> Detalhes da Mensagem
            </h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">

                <dt class="col-sm-3 text-secondary fw-semibold">
                    <i class="mdi mdi-account-circle me-1"></i>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9 fs-8">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-3 text-secondary fw-semibold">
                    <i class="mdi mdi-email-outline me-1"></i>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9 fs-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3 text-secondary fw-semibold">
                    <i class="mdi mdi-phone me-1"></i>
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-9 fs-8">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>

                <dt class="col-sm-3 text-secondary fw-semibold">
                    <i class="mdi mdi-message-text-outline me-1"></i>
                    @Html.DisplayNameFor(model => model.Mensagem)
                </dt>
                <dd class="col-sm-9 fs-8">
                    <pre class="mb-0" style="white-space: pre-wrap;">@Html.DisplayFor(model => model.Mensagem)</pre>
                </dd>

                <dt class="col-sm-3 text-secondary fw-semibold">
                    <i class="mdi mdi-calendar-clock me-1"></i>
                    @Html.DisplayNameFor(model => model.DataRegisto)
                </dt>
                <dd class="col-sm-9 fs82 text-muted">
                    @Html.DisplayFor(model => model.DataRegisto)
                </dd>

                <dt class="col-sm-3 text-secondary fw-semibold">
                    <i class="mdi mdi-eye-outline me-1"></i>
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9 fs-8">
                    @Html.Raw(Model.Estado
                                        ? "<span class='badge bg-success'>Visualizado</span>"
                                        : "<span class='badge bg-warning text-dark'>Não Visualizado</span>")
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-sm btn-secondary">
                <i class="mdi mdi-arrow-left-circle-outline me-1"></i> Voltar
            </a>
        </div>
    </div>
</div>
<!-- jQuery e DataTables -->
<script src="~/dist/css/backend-bundle.min.js"></script>
<script src="~/dist/js/jquery.datatables.min.js"></script>
<script src="~/dist/js/datatables.buttons.min.js"></script>
<script src="~/dist/js/sweetalert2@11.js"></script>